<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.SecondFragment">




    <TextView
        android:id="@+id/cat_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kattens ID">
    </TextView>

    <TextView
        android:id="@+id/cat_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kattens navn">
    </TextView>

    <TextView
        android:id="@+id/cat_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kattens beskrivelse">
    </TextView>

    <TextView
        android:id="@+id/cat_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kattens placering">
    </TextView>

    <TextView
        android:id="@+id/cat_reward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kattens belÃ¸nning">
    </TextView>

    <TextView
        android:id="@+id/cat_user_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kattens brugerID">
    </TextView>

    <TextView
        android:id="@+id/cat_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kattens dato">
    </TextView>

    <ImageView
        android:id="@+id/cat_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="This is the cat"
        >
    </ImageView>


    <TextView
        android:id="@+id/textview_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/button_second"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/previous"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_second" />
</LinearLayout>